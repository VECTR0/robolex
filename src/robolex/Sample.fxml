<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="805.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1" fx:controller="robolex.FXMLController">
  <children>
      <TabPane prefHeight="85.0" prefWidth="1280.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Pause">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <MenuButton layoutX="14.0" layoutY="16.0" mnemonicParsing="false" text="Menu">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Settings" />
                            <MenuItem mnemonicParsing="false" text="Restart" />
                              <MenuItem mnemonicParsing="false" text="Exit" />
                              <MenuItem mnemonicParsing="false" text="Info" />
                          </items>
                        </MenuButton>
                        <Button layoutX="102.0" layoutY="16.0" mnemonicParsing="false" onMouseClicked="#runSimulationButtonAction" text="Run Simulation" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="102.0" AnchorPane.rightAnchor="1081.0" AnchorPane.topAnchor="16.0" />
                        <Button layoutX="225.0" layoutY="16.0" mnemonicParsing="false" onMouseClicked="#runEditorButtonAction" text="Run Editor" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Simulation">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button layoutX="14.0" layoutY="16.0" mnemonicParsing="false" text="Resume Simulation" />
                        <Button layoutX="144.0" layoutY="16.0" mnemonicParsing="false" text="Pause Robot" />
                        <Slider layoutX="368.0" layoutY="9.0" fx:id="simulationSpeedSlider" />
                        <Button layoutX="236.0" layoutY="22.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="66.0" text="Follow Robot" />
                        <Button layoutX="336.0" layoutY="22.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="64.0" text="Free Camera" />
                        <Button layoutX="428.0" layoutY="22.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="74.0" text="Restart Camera" onMouseClicked="#restartCamera"/>
                        <Label layoutX="236.0" layoutY="6.0" text="Speed of Simulation: " />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Editor">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button layoutX="1062.0" layoutY="16.0" mnemonicParsing="false" text="Save Changes" />
                        <MenuButton layoutX="14.0" layoutY="16.0" mnemonicParsing="false" text="Edit Map">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Edit Map" />
                            <MenuItem mnemonicParsing="false" text="Restart Map" />
                          </items>
                        </MenuButton>
                        <Button layoutX="1161.0" layoutY="16.0" mnemonicParsing="false" text="Discard Changes" />
                        <MenuButton layoutX="106.0" layoutY="16.0" mnemonicParsing="false" text="Edit Obstacle">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Action 1" />
                            <MenuItem mnemonicParsing="false" text="Action 2" />
                          </items>
                        </MenuButton>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
  </children>
</VBox>
